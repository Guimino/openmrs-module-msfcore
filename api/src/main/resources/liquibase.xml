<?xml version="1.0" encoding="UTF-8"?>
 
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog/1.9"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog/1.9
                  http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-1.9.xsd">
                  
 	<changeSet author="k-joseph" id="20180718-1618">
 		<preConditions onFail="MARK_RAN">
			<not><indexExists indexName="idgen_identifier_source_unique_uuid" /></not>
		</preConditions>
        <addUniqueConstraint columnNames="uuid" constraintName="idgen_identifier_source_unique_uuid" tableName="idgen_identifier_source"/>
	</changeSet>
	<changeSet id="20180724-1119" author="k-joseph">
		<preConditions onFail="MARK_RAN">
			<sqlCheck expectedResult="0">
				SELECT COUNT(*) FROM scheduler_task_config
				WHERE schedulable_class = 'org.openmrs.module.msfcore.tasks.ClearOutDatedLogs'
			</sqlCheck>
		</preConditions>
		<comment>Inserting Auto Deletion of outdated msfcore logs into 'schedule_task_config' table</comment>
		<insert tableName="scheduler_task_config">
			<column name="name" value="Clear OutDated MSFCore Logs" />
			<column name="description" value="Deletes outdated msfcore log basing on Global property: msfcore.daysToKeepLogs" />
			<column name="schedulable_class" value="org.openmrs.module.msfcore.tasks.ClearOutDatedLogs" />
			<column name="start_time_pattern" value="MM/dd/yyyy HH:mm:ss" />
			<column name="start_time" valueDate="2018-07-24T23:59:59" />
			<column name="repeat_interval" value="86400" />
			<column name="start_on_startup" value="1" />
			<column name="date_created" valueDate="CURRENT_TIMESTAMP" />
			<column name="created_by" value="1" />
			<column name="uuid" value="8defc5be-8f1b-11e8-9eb6-529269fb1459" />
		</insert>
	</changeSet>
</databaseChangeLog>